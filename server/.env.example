# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sourceplus

# JWT Secret (Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==========================================
# AUTOMATIC BACKUP CONFIGURATION
# ==========================================

# Enable/disable automatic backups
AUTO_BACKUP_ENABLED=true

# Cron schedule for backups (default: 2 AM daily)
# Format: minute hour day month weekday
# Examples:
#   "0 2 * * *"     - Daily at 2 AM
#   "0 */6 * * *"   - Every 6 hours
#   "0 0 * * 0"     - Weekly on Sunday
#   "0 3 1 * *"     - Monthly on 1st
BACKUP_SCHEDULE="0 2 * * *"

# Number of days to keep old backups
BACKUP_RETENTION_DAYS=30

# Path to store backups (relative or absolute)
BACKUP_PATH=./backups

# ==========================================
# NOTIFICATION SYSTEM (Coming Soon)
# ==========================================

# Email Notifications (SMTP)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Telegram Notifications
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Minimum password length
MIN_PASSWORD_LENGTH=8

# Session timeout (minutes)
SESSION_TIMEOUT=15

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==========================================
# LOGGING
# ==========================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log retention (days)
LOG_RETENTION_DAYS=90

# ==========================================
# FEATURES FLAGS
# ==========================================

# Enable/disable features
FEATURE_AUTO_RENEWAL=true
FEATURE_WEBHOOKS=false
FEATURE_ANALYTICS=true
